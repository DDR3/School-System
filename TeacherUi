    private void AddVActionPerformed(java.awt.event.ActionEvent evt) {                                     

        String studentName = JOptionPane.showInputDialog(this, "Enter Student Name:");
        String gradeInput = JOptionPane.showInputDialog(this, "Enter Grade for " + studentName + ":");
        
        try {       
            int grade = Integer.parseInt(gradeInput);
            
            if (grade >= 0 && grade <100){
                
            javax.swing.table.DefaultTableModel model = (javax.swing.table.DefaultTableModel) TableV.getModel();
            model.addRow(new Object[]{studentName, grade});
            
            } else {
                JOptionPane.showMessageDialog(this,"The number does not exceed 100", "Error", JOptionPane.ERROR_MESSAGE);
            }            
        } catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Invalid grade input. Please enter a number.", "Error", JOptionPane.ERROR_MESSAGE);

        }                          
    }                                    

    private void ExitActionPerformed(java.awt.event.ActionEvent evt) {                                     

        System.exit(0);
    }                                    

    private void clearVActionPerformed(java.awt.event.ActionEvent evt) {                                       
  
        int selectedRow = TableV.getSelectedRow();
        javax.swing.table.DefaultTableModel model = (javax.swing.table.DefaultTableModel) TableV.getModel();
        model.removeRow(selectedRow);
                          
    }                                      


